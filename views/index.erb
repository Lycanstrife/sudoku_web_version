<html>
<head>
  <title>Sudoku Game</title>
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
   <link href='http://fonts.googleapis.com/css?family=Nunito:400,300,700' rel='stylesheet' type='text/css'>
</head>
<body>
   <div id="sudoku">
      <div class="logo">
        <div class="blue">
          G
        </div>
        <div class="red">
          o
        </div>
        <div class="yellow">
          o
        </div>
        <div class="blue">
          g
        </div>
        <div class="green">
          l
        </div>
        <div class="red">
          e
        </div>
     </div>
     <div class="clear">
     </div>
     <h1>sudoku</h1>
     <!-- one div for each row -->
     <% 3.times do |row| %>
       <div class='row'>
           <!-- we want to create separate div elements for boxes to    style them using CSS -->
         <% 3.times do |box| %>
             <div class="box">
            <!-- each box will have nine cells -->
            <% 3.times do |cell_row| %>
                 <div class="cell-row">
                <% 3.times do |cell| %>
                    <div class="cell">
                      <!-- every cell will have an input field -->
                      <% cell_index = row * 27 + box * 3 + cell_row * 9 + cell %>
                      <% cell_value = @current_solution[cell_index] %>
                      <input type="text" maxlength="1" autocomplete="off" value="<%= cell_value %>" >
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <div class="solution">
    <form action="/solution" method="post">
      <!-- all boxes, rows and cells -->
      <button>Check solution</button>
    </form>
  </div>
</body>
</html>